{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["es2020"],
      "declaration": true,
      "sourceMap": true,
      "outDir": "lib",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["bin/**/*.ts", "lib/**/*.ts", "test/**/*.ts"]
  }
  